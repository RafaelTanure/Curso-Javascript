const escola = "Cod3r";

//pegar um determinado caracter da string
console.log(escola.charAt(4));
console.log(escola.charAt(5));
//pegar o código do caracter atraves da string 
console.log(escola.charCodeAt(3));
//pegamos 1 caracter a partir da string, o indice dele 
console.log(escola.indexOf('3'));
//Realizamos duas chamadas de subtring , passando o indice inicial e o final . 
console.log(escola.substring(1));
console.log(escola.substring(0, 3));

//formas de concatenar 
console.log('Escola '.concat(escola).concat("!"));
console.log('Escola ' + escola + ("!"));
//utilização de regex 
console.log(escola.replace(3, 'e'));
console.log('Ana,Maria,Pedro'.split(','));
