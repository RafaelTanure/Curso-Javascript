let isAtivo = false;
console.log(isAtivo);

isAtivo = true;

console.log(isAtivo);

isAtivo = 1;
//a negação  colocando duas vezes passa o valor contrario que foi declarado na váriavel. 
console.log(!!isAtivo);
// transformando o valor em um valor verdadeiro ou falso , utilizamos a negação " ! ". 

// valores verdadeiro quando passamos a negação 
console.log('os verdadeiro... ');
console.log(!!3);
console.log(!!-1);
console.log(!! ' ');
console.log(!![]);
console.log(!!{});
console.log(!!Infinity);
console.log(!!(isAtivo = true));

// valores falsos quando passamos a negação 

console.log(' os falsos... ');
console.log(!!0);
console.log(!!'');
console.log(!!null);
console.log(!!NaN);
console.log(!!undefined);
console.log(!!(isAtivo = false));

// Expressão logica para finalizar 

console.log(' para finalizar... ');
console.log(!!('' || null || 0 || ' ')); 

let nome = 'Lucas'
console.log(nome||'Desconhecido');
